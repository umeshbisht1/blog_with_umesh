<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <%- include('./partials/link') %>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div class="container" style="margin-bottom: 20px">
      <h1 class="mt-3" style="text-align: center"><%= blog.title %></h1>
      <div
        class="container"
        style="display: flex; gap: 5%; align-items: center; flex-wrap: wrap"
      >
        <img
          src="<%= blog.coverImageUrl %>"
          alt=""
          class="mt-4"
          style="
            height: 250px;
            width: 250px;
            object-fit: fill;
            background-position: top;
            background-repeat: no-repeat;
            background-size: cover;
            border-radius: 10px;
          "
        />
        <pre class="mt-4"><%= blog.body %></pre>
      </div>
      <div class="container mt-4" style="display: flex; gap: 20px">
        <img
          src="<%= blog.createdBy.profileImageUrl %>"
          alt=""
          width="50px"
          height="50px"
          style="border-radius: 45px"
        />
        <h1><%= blog.createdBy.firstName %></h1>
      </div>

      <div class="container mt-4">
        <h1>Comment...(<%= comment.length %>)</h1>
        <% if (locals.user) { %>
        <form
          action="/blog/comment/<%= blog._id %>"
          method="POST"
          style="text-align: center"
        >
          <div class="col-sm-10" style="display: flex; gap: 50px">
            <input
              type="text"
              class="form-control"
              id="content"
              placeholder="Enter your comment..."
              name="content"
            />
            <button class="btn btn-primary" type="submit">Comment</button>
          </div>
        </form>
        <% } %>
      </div>
      <div class="mt-3">
        <% comment.forEach(comment => { %>
        <div class="div" style="display: flex; gap: 20px">
         
          <img
            src="<%= comment.createdBy.profileImageUrl %>"
            alt=""
            height="50px"
            width="50px"
            style="border-radius: 45px"
          />
          <h1><%= comment.createdBy.firstName %></h1>
        </div>
        <div
          class=""
          style="display: flex; width: 100%; justify-content: space-between;
          flex-direction: column;"
        >
          <pre><%= comment.content %></pre>
          <div class="" style="display: flex;justify-content: space-between; width: 100%;">
            <% if (locals.user) { %>
           <ul style="display: flex; gap: 10px;" >
          
            <li style="list-style: none;"><a href="/blog/like/<%= comment._id %>/<%= user._id %>/<%= blog._id %>" style="text-decoration: none;">üëç </a><%= comment.liked?comment.liked.length:0     %></li>
            <li style="list-style:  none;"><a style="text-decoration: none;" href="/blog/dislike/<%= comment._id %>/<%= user._id %>/<%= blog._id %>">üëé </a> <%=comment.disliked?comment.disliked.length:0  %></li></ul>

           <% if (user.role==="ADMIN"||(user._id == comment.createdBy._id)) { %>
            <li style="list-style:none ;"><a  style="text-decoration: none;" href="">‚ùå</a></li>
           <% } %>
           <% } %>
        
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
